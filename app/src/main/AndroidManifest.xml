<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.nekonyan.githubapp">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubApp">
        <activity
            android:name="tech.nekonyan.githubapp.ui.activity.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"/>
        <activity
            android:name="tech.nekonyan.githubapp.ui.activity.PreviewImageActivity"
            android:exported="false"
            android:label="@string/title_activity_preview" />
        <activity
            android:name="tech.nekonyan.githubapp.ui.activity.DetailActivity"
            android:exported="false"
            android:label="@string/title_activity_detail" />
        <activity
            android:name="tech.nekonyan.githubapp.ui.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tech.nekonyan.githubapp.ui.activity.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_list" />
    </application>
</manifest>